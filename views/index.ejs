<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- <link rel="stylesheet" href="../css/add_students.css"> -->
        <link rel="stylesheet" href="../css/styles.css">
        <link rel="stylesheet" href="../css/students.css">
        <title>Student Management Dashboard</title>
    </head>
    <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400&display=swap');

    header {
        font-family: 'Poppins', sans-serif;
    }
</style>

    <body>
        <!-- header top navigation bar -->
        <%- include("header") %>
        <!-- side navigation bar -->

        <main class="content">
            <section id="dashboard">
                <%- include("dashboard") %>
            </section>
            <section id="students">
                <div class="container">

                    <h1>Student List</h1>
                    <table class="student-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Contact</th>
                                <th>Faculty</th>
                                <th>Blood Group</th>
                                <th>Actions</th>
                            </tr>
                        </thead>

                        <tbody>

                            <% studentsmanagement.forEach((record)=>{ %>
                            <tr>
                                <td><%- record.name %></td>
                                <td><%- record.address %></td>
                                <td><%- record.contact %></td>
                                <td><%- record.class %></td>
                                <td><%- record.bloodgroup %></td>
                                <td>
                                    <button class="btn edit-btn"><a
                                            class="btn edit-btn"
                                            href="/createStudents/:id">Edit</a></button>
                                    <button class="btn delete-btn"><a
                                            class="btn delete-btn" href>Delete</a></button>
                                </td>
                            </tr>
                            <% }) %>

                        </tbody>

                    </table>

                </div>
                <%- include("pagination") %>
            </section>
            <!-- adding students -->
            <section id="add-students">
                <%- include("createStudents") %>
            </section>
        </main>

    </body>

</html>