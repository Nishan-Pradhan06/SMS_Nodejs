<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="../css/add_students.css">
        <link rel="stylesheet" href="../css/styles.css">
        <link rel="stylesheet" href="../css/students.css">
        <title>Student Management Dashboard</title>
    </head>
    <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400&display=swap');

    header {
        font-family: 'Poppins', sans-serif;
    }
</style>

    <body>
        <!-- header top navigation bar -->
        <header>
            <div class="logo"><img src="../img/logo.png" alt="img"
                    style="height: 60px;width: 60px;"></div>
            <div class="user-menu">
                <span>Welcome, Admin!</span>
                <a href="#">Profile</a>
                <a href="#">Notifications</a>
                <a href="#">Logout</a>
            </div>
        </header>
        <!-- side navigation bar -->
        <aside>
            <nav class="sidebar">
                <ul>
                    <li><a href="#dashboard" id="dashboard-link">Dashboard</a></li>
                    <li><a href="#students" id="view-students-link">View
                            Students</a></li>
                    <li><a href="#add-students" id="add-student-link">Add
                            Student</a></li>
                </ul>
            </nav>
        </aside>
        <main class="content">
            <section id="dashboard">
                <%- include("dashboard") %>
            </section>
            <section id="students">
                <div class="container">
                    <h1>Student List</h1>
                    <table class="student-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Contact</th>
                                <th>Faculty</th>
                                <th>Blood Group</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td> nishan</td>
                                <td> laxmimarga</td>
                                <td>980000</td>
                                <td>BCA</td>
                                <td> b+</td>
                                <td>
                                    <button class="btn edit-btn">Edit</button>
                                    <button class="btn delete-btn">Delete</button>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </section>
            <!-- adding students -->
            <section id="add-students">
                <%- include("createStudents") %>
            </section>
        </main>
        <script src="../js/script.js"></script>
    </body>

</html>